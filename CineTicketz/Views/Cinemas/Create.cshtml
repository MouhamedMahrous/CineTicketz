@model CineTicketz.ViewModels.CreateCinemaFormViewModel;

@{
    ViewData["Title"] = "Add Cinema";
}

<h5 class="mt-5">
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new Cinema
</h5>

<form asp-controller="Cinemas" enctype="multipart/form-data">
    <div class="row">
        <div>
            <label asp-for="Name" class="form-label mt-4"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Cinema name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description" class="form-label mt-4"></label>
            <textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Logo" class="form-label mt-4"></label>
            <input type="file" class="form-control" asp-for="Logo"
                   data-rule-extension="jpg,png,jpeg"
                   data-msg-extension="Not allowed extention">
            <small class="form-text text-muted d-block">Only .jpg, .jpeg, .png files are allowed</small>
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>
        <div class="row mt-5 d-flex justify-content-center">
            <button type="submit" class="btn btn-light text-black col-3">Save</button>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}