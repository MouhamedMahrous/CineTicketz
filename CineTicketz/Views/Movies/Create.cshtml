@model CineTicketz.ViewModels.CreateMovieFormViewModel;

@{
    ViewData["Title"] = "Add Movie";
}

<h5 class="mt-5">
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new Movie
</h5>

<form asp-controller="Movies" enctype="multipart/form-data">
    <div class="row">
        <div>
            <label asp-for="Name" class="form-label mt-4"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Movie name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description" class="form-label mt-4"></label>
            <textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price" class="form-label mt-4"></label>
            <input asp-for="Price" class="form-control" type="number" min="10.00" max="100.00" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="StartDate" class="form-label mt-4"></label>
            <input asp-for="StartDate" value="" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="EndDate" class="form-label mt-4"></label>
            <input asp-for="EndDate" value="" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="MovieCategory" class="form-label mt-4"></label>
            <select class="form-select" asp-for="MovieCategory" asp-items="Model.Categories">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="MovieCategory" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="SelectedActors" class="form-label mt-4"></label>
            <select class="form-select" asp-for="SelectedActors" asp-items="Model.Actors">
                <option value="">Select Actors</option>
            </select>
            <span asp-validation-for="SelectedActors" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ProducerId" class="form-label mt-4"></label>
            <select class="form-select" asp-for="ProducerId" asp-items="Model.Producers">
                <option value="">Select Producer</option>
            </select>
            <span asp-validation-for="ProducerId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="CinemaId" class="form-label mt-4"></label>
            <select class="form-select" asp-for="CinemaId" asp-items="Model.Cinemas">
                <option value="">Select Cinema</option>
            </select>
            <span asp-validation-for="CinemaId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="FilmPoster" class="form-label mt-4"></label>
            <input type="file" class="form-control" asp-for="FilmPoster"
                   data-rule-extension="jpg,png,jpeg"
                   data-msg-extension="Not allowed extention">
            <small class="form-text text-muted d-block">Only .jpg, .jpeg, .png files are allowed</small>
            <span asp-validation-for="FilmPoster" class="text-danger"></span>
        </div>
        <div class="row mt-5 d-flex justify-content-center">
            <button type="submit" class="btn btn-light text-black col-3">Save</button>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}